[user]
    email = tjansson60@gmail.com
    name  = Thomas Jansson
[credential]
    helper = cache --timeout 36000

[diff]
    tool = meld
[difftool]
    prompt = false
[difftool "meld"]
    path = /usr/bin/meld

[merge]
    tool = meld
[mergetool]
    prompt = false
[mergetool "meld"]
    path = /usr/bin/meld
[push]
    default = matching

[alias]
    ci = commit
    co = checkout
    br = branch
    st = status
    last = log -1 HEAD

[log]
    date = relative

[format]
    pretty = format:%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s
