[user]
    email = tjansson60@gmail.com
    name  = Thomas Jansson

# General setup
[credential]
    helper = cache --timeout 36000

[push]
    default = matching

[core]
    autocrlf = input

# Setup nice log output
[log]
    date = relative
[format]
    pretty = format:%C(yellow)%h %Cblue%>(12)%ad %Cgreen%<(7)%aN%Cred%d %Creset%s

[color]
    ui = true

# Aliases
[alias]
    ci = commit
    co = checkout
    br = branch
    st = status
    last = log -10 --graph
    unstage = reset --

# Using meld as diff and merge tool
[diff]
    tool = meld
    mnemonicprefix = true
	colorMoved = zebra

[difftool]
    prompt = false

[difftool "meld"]
    trustExitCode = true
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld

[mergetool]
    prompt = false

[mergetool "meld"]
    trustExitCode = true
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"

# Use rebasing instead of merge to avoid extra commits and cleaner history
[pull]
    rebase = true

# Will delete inaccessible Git objects in your local repository that arenâ€™t on remote. (removed old branches)
[fetch]
	prune = true
